# EditorConfig is awesome: http://EditorConfig.org

# Top-most EditorConfig file
root = true

# Matches all files except those in the _site and node_modules folders
[{/*,/_includes/*,/_layouts/*,/_posts/*,/_sass/*,/assets/*}]

# Newline ending every file
insert_final_newline = true

# Set default charset
charset = utf-8

# Set 4 space indentation
indent_style = space
indent_size = 2

# Remove any whitespace characters preceding newline characters
trim_trailing_whitespace = true

# Matches the exact files Gemfile.lock
[{Gemfile.lock}]
indent_style = tab

# Would prefer indent_size = 0 for HTML but some editors like Brackets do not support
[*.html]
indent_style = space
indent_size = 1
