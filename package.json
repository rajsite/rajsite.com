{
  "name": "rajsite",
  "version": "1.0.0",
  "description": "Tooling for rajsite.com homepage",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rajsite/rajsite.github.io.git"
  },
  "author": "Milan Raj (@rajsite)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rajsite/rajsite.github.io/issues"
  },
  "homepage": "https://github.com/rajsite/rajsite.github.io#readme",
  "devDependencies": {
    "markdown-spellcheck": "^1.3.0"
  },
  "scripts": {
    "pretest": "npm run build",
    "test": "npm run test:spelling",
    "test:spelling": "npm run spellcheck -- --report",
    "test:all": "npm run test && npm run test:manual",
    "test:manual": "npm run lint:travis",
    "lint:travis": "bundle exec travis lint .travis.yml",
    "build": "bundle exec jekyll build",
    "spellcheck": "mdspell --en-us --ignore-numbers \"**/*.md\" \"!node_modules/**\" \"!_site/**\" \"!vendor/**\" \"!_drafts/**\"",
    "serve": "bundle exec jekyll serve --watch --drafts"
  }
}
