---
interface Props {
    hint: string;
}

const { hint } = Astro.props;
---
<style lang="scss">
    @use '../styles/tokens.scss';
    .hover-hint {
        border-bottom: 1px dotted lightgray;
        -webkit-touch-callout: none;
        user-select: none;
    }

    .hover-hint::after {
        display: none;
        content: attr(title);
        margin: 20px;
        border-radius: 5px;
        padding: 10px;
        background-color: tokens.$rajsite-popup-background-color;
        color: tokens.$rajsite-popup-font-color;
        text-align: center;
        white-space: pre-line;
    }

    .hover-hint:active::after {
        display: block;
    }
</style>
<span class="hover-hint" title={hint}><slot /></span>
