---
import Icon from './icon.astro';

interface Props {
    iconSvg: string;
    username: string;
    url: string;
    title: string;
}

const { iconSvg, username, url, title } = Astro.props;
---
<style lang="scss">
@use '../../styles/tokens.scss';

.social-media-icons {
    white-space: nowrap;
}

.social-media-icons .username {
    margin-left: 4px;
    margin-right: 10px;
    margin-bottom: 18px;
}

a {
    color: tokens.$rajsite-90-font-color;
    text-decoration: none;
}

a:hover {
    color: tokens.$rajsite-30-font-color;
    text-decoration: underline;
}
</style>
<span class="social-media-icons">
    <a href={url} title={title}><Icon iconSvg={iconSvg}></Icon><span class="username">{username}</span></a>
</span>
